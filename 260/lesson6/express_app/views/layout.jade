//- set app.locals.basedir , otherwise use ./_mixins
include _mixins 


doctype html
html
  head
    title Web Store
    +stylesheet_link_tag("application")
    link(href="http://fonts.googleapis.com/css?family=Fjalla+One" rel="stylesheet" type="text/css")
  body
    main
      h1 Products
      div#cart
        h3 
          a(href="#") Cart<span>4</span>
        div#items
          ul
            li ActRaiser x 1<span>$50.00</span>
            li Metroid Prime x 2<span>$21.00</span>
            li Silent Hill 3 x 1<span>$25.00</span>
            li <strong>Total</strong><span>$96.00</span>
          a(href="#") Checkout

      block content
    +javascript_include_tag("cart")